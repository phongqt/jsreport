<div>
    <table cellpadding="0" cellspacing="0">
        <tr>
            <td colspan="2" style="font-size:medium; font-weight:bold;">
                Sample Employee data
            </td>
        </tr>
        <tr>
            <td>Employee Id</td>
            <td>Employee Name</td>
            <td>Designation</td>
            <td>Experience</td>
        </tr>
        {{#each employees}}
        <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{designation}}</td>
            <td>{{exp}} yrs.</td>
        </tr>
        {{/each}}
    </table>
</div>